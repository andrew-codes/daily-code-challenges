{
  "include": ["./src/*"],
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "esModuleInterop": true,
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true
  }
}
